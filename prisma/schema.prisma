generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// enums
enum Gender {
  MALE
  FEMALE
  UNKNOWN
}

enum Channel {
  UNKNOWN
  EMAIL
  SITE
}

enum ReminderType {
  UNKNOWN
  VACCINE
  MEDICINE
  APPOINTMENT
}

enum MedicineType {
  CONTINUOUS
  CURATIVE
}

// NextAuth models
model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]

  animals Animal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

// application models
model Animal {
  id   String @id @default(cuid())
  name String

  speciesId String
  species   Species @relation(fields: [speciesId], references: [id])

  gender Gender

  birthDate  DateTime
  weight     Float
  color      String
  castrated  Boolean
  notes      String?
  pictureUrl String?

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  vaccines     Vaccine[]
  medicines    Medicine[]
  appointments Appointment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Species {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?

  animals Animal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vaccine {
  id             String    @id @default(cuid())
  name           String
  appliedAt      DateTime
  expiresAt      DateTime?
  veterinarian   String?
  notes          String?
  reminderActive Boolean   @default(false)

  animalId String
  animal   Animal @relation(fields: [animalId], references: [id], onDelete: Cascade)

  reminders Reminder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Medicine {
  id             String       @id @default(cuid())
  name           String
  dosage         String
  frequency      String
  startAt        DateTime
  endAt          DateTime?
  type           MedicineType
  notes          String?
  reminderActive Boolean      @default(false)

  animalId String
  animal   Animal @relation(fields: [animalId], references: [id], onDelete: Cascade)

  appointmentId String?
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)

  reminders Reminder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Appointment {
  id             String   @id @default(cuid())
  dateTime       DateTime
  reason         String
  veterinarian   String?
  diagnosis      String?
  clinic         String?
  notes          String?
  reminderActive Boolean  @default(false)

  animalId String
  animal   Animal @relation(fields: [animalId], references: [id], onDelete: Cascade)

  medicines Medicine[]
  reminders Reminder[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reminder {
  id        String       @id @default(cuid())
  remindAt  DateTime
  type      ReminderType
  channel   Channel
  message   String?
  active    Boolean      @default(false)
  recurring Boolean      @default(false)

  vaccineId String?
  vaccine   Vaccine? @relation(fields: [vaccineId], references: [id], onDelete: Cascade)

  medicineId String?
  medicine   Medicine? @relation(fields: [medicineId], references: [id], onDelete: Cascade)

  appointmentId String?
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
